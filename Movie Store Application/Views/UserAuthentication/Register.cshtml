@model Movie_Store_Application.Models.DTO.Registration



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>

<h4>Registration</h4>
<hr />

            <form class="w-40" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="input-container">
                <label asp-for="Name" class="w-40">Name</label>
                    <input name="Name"  asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="input-container">
                <label asp-for="Email" class="w-40">Email</label>
                    <input asp-for="Email" name="Email"  />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="input-container">
                <label asp-for="Username" class="w-40">Username</label>
                    <input asp-for="Username" name="Username"  />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="input-container">
                <label asp-for="Password" class="w-40">Password</label>
                    <input asp-for="Password" name="Password" type="Password"  />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="input-container">
                <label asp-for="PasswordConfirm" class="w-40">Confirm Password</label>
            <input asp-for="PasswordConfirm" name="PasswordConfirm" type="Password" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
                <div class="input-container">
                <label asp-for="Role" class="w-40">Role</label>
                    <input asp-for="Role" name="Role" />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>




</body>
</html>
